name: Build APK

on:
  push:
    branches:
      - main

jobs:
  build:
    name: Build APK with Gradle
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Set up JDK 17
        uses: actions/setup-java@v3
        with:
          distribution: 'temurin'
          java-version: 17

      - name: Grant execute permission for gradlew
        run: chmod +x ./P2PProfitWebView_GitHubReady/gradlew

      - name: Build APK
        run: |
          cd P2PProfitWebView_GitHubReady
          ./gradlew assembleDebug

      - name: Upload APK
        uses: actions/upload-artifact@v3
        with:
          name: p2pprofit-apk
          path: P2PProfitWebView_GitHubReady/app/build/outputs/apk/debug/*.apk
